material {
	shader "/shaders/pbr.glsl";
	pbr_material {
		albedo_map {
			path "textures/rustediron2_basecolor.png";
			is_antialiased true;
		}
		normal_map {
			path "textures/rustediron2_normal.png";
			is_antialiased true;
		}
		roughness_map {
			path "textures/rustediron2_roughness.png";
			is_antialiased true;
		}
		metallic_map {
			path "textures/rustediron2_metallic.png";
			is_antialiased true;
		}
		albedo {
			r 1;
			g 1;
			b 1;
		}
		metallic 1;
		roughness 1;
		emissive 0;
	}
}
