material {
	shader "/shaders/pbr.glsl";
	pbr_material {
		albedo_map {
			path "textures/Vampire_diffuse.png";
			is_antialiased true;
		}
		normal_map {
			path "textures/Vampire_normal.png";
			is_antialiased true;
		}
		metallic_map {
			path "textures/Vampire_specular.png";
			is_antialiased true;
		}
		emissive_map {
			path "textures/Vampire_emission.png";
			is_antialiased true;
		}
		albedo {
			r 1;
			g 1;
			b 1;
		}
		metallic 1;
		roughness 1;
		emissive 10;
	}
}
