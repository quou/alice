scene {
	settings {
		postprocess_shader "shaders/postprocess.glsl";
		bright_extract_shader "shaders/bright_extract.glsl";
		blur_shader "shaders/blur.glsl";
		debug false;
		line_shader "shaders/line.glsl";
		use_bloom true;
		bloom_threshold 100;
		bloom_blur_iterations 10;
		use_antialiasing true;
		gravity -10;
	}


	entities {
	entity {
		name "lights";
		position {
			x 0;
			y 0;
			z 0;
		}
		rotation {
			x 0;
			y 0;
			z 0;
		}
		scale {
			x 1;
			y 1;
			z 1;
		}
		children {
			entity {
				name "point lights";
				position {
					x 0;
					y 0;
					z 0;
				}
				rotation {
					x 0;
					y 0;
					z 0;
				}
				scale {
					x 1;
					y 1;
					z 1;
				}
			}
			directional_light {
				name "sun";
				position {
					x 0;
					y -1;
					z 0;
				}
				rotation {
					x 0;
					y 0;
					z 0;
				}
				scale {
					x 1;
					y 1;
					z 1;
				}
				color {
					r 1;
					g 1;
					b 1;
				}
				intensity 10;
			}
		}
	}
	camera_3d {
		name "main camera";
		position {
			x 0;
			y 3;
			z 0;
		}
		rotation {
			x -45;
			y 0;
			z 0;
		}
		scale {
			x 1;
			y 1;
			z 1;
		}
		fov 45;
		near 0.1;
		far 1000;
		exposure 1;
		gamma 1.4;
		active true;
	}
	renderable_3d {
		name "cube";
		position {
			x 0;
			y 0;
			z 3;
		}
		rotation {
			x 0;
			y 45;
			z 0;
		}
		scale {
			x 1;
			y 1;
			z 1;
		}
		model "cube";
		materials [
			"materials/basic.mat";
		]
	}
}
}
