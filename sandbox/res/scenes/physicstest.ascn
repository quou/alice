scene {
	settings {
		postprocess_shader "shaders/postprocess.glsl";
		bright_extract_shader "shaders/bright_extract.glsl";
		blur_shader "shaders/blur.glsl";
		debug false;
		use_bloom true;
		bloom_threshold 1;
		bloom_blur_iterations 10;
		use_antialiasing true;
		gravity -10;
	}
	entities {
		camera_3d {
			name "camera";
			position {
				x 0;
				y 10;
				z -10;
			}
			rotation {
				x -45;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			fov 45;
			near 0.1;
			far 1000;
			exposure 1;
			gamma 1.4;
			active true;
		}
		point_light {
			name "red lamp";
			position {
				x -2;
				y 1;
				z 0;
			}
			rotation {
				x 0;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			color {
				r 1;
				g 0;
				b 0;
			}
			range 5;
			intensity 4;
		}
		point_light {
			name "blue lamp";
			position {
				x 0;
				y 3;
				z 0;
			}
			rotation {
				x 0;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			color {
				r 0;
				g 0;
				b 1;
			}
			range 10;
			intensity 10;
		}
		directional_light {
			name "sun";
			position {
				x 1;
				y -1;
				z 0.5;
			}
			rotation {
				x 0;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			color {
				r 1;
				g 1;
				b 1;
			}
			intensity 1;
		}
		rigidbody_3d {
			name "cube";
			position {
				x 0;
				y 10;
				z 0;
			}
			rotation {
				x 0;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			mass 1;
			dynamic_friction 0.3;
			static_friction 0.3;
			restitution 0.3;
			gravity_scale 1;
			box {
				dimentions {
					x 2;
					y 2;
					z 2;
				}
				position {
					x 0;
					y 0;
					z 0;
				}
			}
			children {
				renderable_3d {
					name "cube visual";
					position {
						x 0;
						y 0;
						z 0;
					}
					rotation {
						x 0;
						y 0;
						z 0;
					}
					scale {
						x 2;
						y 2;
						z 2;
					}
					model "cube";
					materials [
						"materials/basicphong.mat";
					]

				}
			}
		}
		rigidbody_3d {
			name "monkey";
			position {
				x 2;
				y 5;
				z 0;
			}
			rotation {
				x 0;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			script {
				get_instance_size "alice_get_monkey_physics_size";
				on_init "monkey_physics_init";
				on_update "monkey_physics_update";
			}
			mass 1;
			dynamic_friction 0.3;
			static_friction 0.3;
			restitution 0.3;
			gravity_scale 1;
			box {
				dimentions {
					x 2;
					y 2;
					z 2;
				}
				position {
					x 0;
					y 0;
					z 0;
				}
			}
			children {
				renderable_3d {
					name "monkey visual";
					position {
						x 0;
						y 0;
						z 0;
					}
					rotation {
						x 0;
						y 180;
						z 0;
					}
					scale {
						x 1;
						y 1;
						z 1;
					}
					model "models/monkey.glb";
					materials [
						"materials/wood.mat";
					]

				}
			}
		}
		rigidbody_3d {
			name "ground";
			position {
				x 0;
				y 0;
				z 0;
			}
			rotation {
				x 0;
				y 0;
				z 0;
			}
			scale {
				x 1;
				y 1;
				z 1;
			}
			mass 0;
			dynamic_friction 0.3;
			static_friction 0.3;
			restitution 0.3;
			gravity_scale 0;
			box {
				dimentions {
					x 10;
					y 0.4;
					z 10;
				}
				position {
					x 0;
					y 0;
					z 0;
				}
			}
			children {
				renderable_3d {
					name "ground visual";
					position {
						x 0;
						y 0;
						z 0;
					}
					rotation {
						x 0;
						y 0;
						z 0;
					}
					scale {
						x 10;
						y 0.4;
						z 10;
					}
					model "cube";
					materials [
						"materials/wood.mat";
					]

				}
			}
		}
	}
}
